extends layout 

block content
  link(rel='stylesheet', href='/stylesheets/profile.css')
  section
    .profile 
        h1.primary= title
            .secondary #{currentUser.role.charAt(0).toUpperCase() + currentUser.role.slice(1)}
        h2 Date Joined: #{currentUser.formattedTimestamp}
        h2 Messages: #{messageCount}
        if currentUser.username == user.username
          hr
          a.action(href=`/users/${currentUser._id}/profile/settings`) User Settings
    if messageCount > 0
      .mini-messages
        h1.primary Messages sent by user
        .mini-messages-all
          for message in messages 
            .mini-message
              .mini-message-header 
                .mini-message-title #{message.title}
                .mini-message-date #{message.formattedTimestamp}
              .mini-message-text!= message.text
